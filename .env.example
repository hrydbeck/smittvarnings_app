# Example environment variables for smittvarnings_app
# Copy to .env and fill in real values (do NOT commit secrets).

# SMTP settings (required for email alerts)
SMTP_HOST=smtp.example.org
SMTP_PORT=587
SMTP_USER=your_smtp_user      # optional: omit if server allows anonymous or uses other auth
SMTP_PASS=your_smtp_pass      # optional
SMTP_FROM=smittvarnings@example.org
ALERT_EMAIL=alerts@example.org

# Optional: ensure containers write files as your host user (used by docker-compose)
LOCAL_UID=1000
LOCAL_GID=1000
